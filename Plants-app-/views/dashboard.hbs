<div class="topnav">
  <a class="active" href="dashboard">Dashboard</a>
  <a href="search-result">View all</a>
</div>


<h2>this is the dashboard, aka your personal collection</h2>
<input type="text" name="search">
<button type="submit">search</button>
<hr size="3" width="100%" color="green">  

<div>
    {{#with user}}
{{#each myPlants}}
<img src="{{this.img_url}}" alt="picture of  {{this.commonName}}"/>

<div>Plant family: {{this.id.family}}</div>
<div>Common name: {{this.id.commonName}}</div>
<div>Water: {{this.id.watering}}</div>
<div>Humidity: {{this.id.humidity}}</div>

<form action="/dashboard/{{ this._id }}/delete" method="GET">
  <button type="submit" class="button">Remove</button>
</form>
<button><a href="/dashboard/{{ this._id }}/edit">Edit</a></button>

{{/each}}
{{/with}}
</div>
