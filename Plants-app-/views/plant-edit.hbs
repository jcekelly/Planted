


{{#with plant}}

<h2>Edit the plant: {{this.id.commonName}}</h2>

<img src="{{this.id.image_url}}" alt="picture of  {{this.id.commonName}}"/>
<div>Current category: {{this.id.Category}}</div>

<form action="/{{this.id._id}}/editThis" method="post">
  
  <label for="category"> New category: </label>
    <input type="text"  name="category" id="category" value="{{this.currentCategory}}" />
 
<div>Plant family: {{this.id.family}}</div>
<div>Scientific name: {{this.id.name}}</div>
<div>Common name: {{this.id.commonName}}</div>

  <label for="nickName"> Nickname:  </label>
    <input type="text" name="nickName" id="nickName" value="{{this.nickname}}" />

<div>Recommended humidity: {{this.id.humidity}}</div>

  <label for="humidity"> Current humidity:
    <input type="percentage" name="humidity" id="humidity" value="{{this.currentHumidity}}" />
  </label>

<div>Temperature: {{this.id.temperature}}</div>

  <label for="temperature"> Current temperature:  </label>
    <input type="number" name="temperature" id="temperature" value="{{this.currentTemperature}}" />
  

<div>fertilizer: {{this.id.fertilizer}}</div>
<div>Pets toxicity: {{this.id.toxicityForPets}}</div>
<div>Water: {{this.id.watering}}</div> 
{{#if needWater}}
    true
{{/if}}
  <label> I need to be water: </label>
    <button type="reset">Watered</button>

<div>
  <button type="submit" class="button">Save changes</button>
</div>
</form>

{{/with}}
