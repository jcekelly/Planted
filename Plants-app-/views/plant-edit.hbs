
<h2>Edit the plant: {{plant.commonName}}</h2>

{{#with plant}}

<img src="{{this.img_url}}" alt="picture of  {{this.commonName}}"/>
<div>Current category: {{this.Category}}</div>
<div>
<label> New category:
    <input type="text"  value="{{this.Category}}" />
  </label>
</div>
<div>Plant family: {{this.family}}</div>
<div>Scientific name: {{this.name}}</div>
<div>Common name: {{this.commonName}}</div>
<label> Nickname:
    <input type="text"  value="{{this.nickname}}" />
  </label>
<div>Water: {{this.watering}}</div> 
<div></div>
<form action="{{plant._id}}/edit" method="post"></form> 
  <label> Pot size:
    <input type="number"  value="{{this.size.potSize}}" />
  </label>
  <label> Height:
    <input type="number"  value="{{this.size.height}}" />
  </label>
  
</form>
<div>Recommended humidity: {{this.recommendedHumidity}}</div>
<label> Current humidity:
    <input type="percentage"  value="{{this.humidity}}" />
  </label>
<div>Temperature: {{this.recommendedTemperature}}</div>
<label> Current temperature:
    <input type="degree"  value="{{this.temperature}}" />
  </label>
<div>fertilizer: {{this.fertilizer}}</div>
<div>Pets toxicity: {{this.toxicityForPets}}</div>
<div>
  <label> I need to be water:
    <button>Watered</button> 
  </label>
</div>

<button>Save changes</button>

{{/with}}
