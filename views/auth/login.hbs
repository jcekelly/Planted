<html class="index-background">
	<div class="index">

		<h2>Log in </h2>
		<form class="login-form" action="/login" method="POST">
			<label for="username">Username </label>
			<p>
				<input class="imput-tag" type="text" name="username">
			</p>
			<label for="password">Password </label>
			<p>
				<input class="imput-tag" type="password" name="password">
			</p>
			<div>
				<button class="save-changes" type="submit">Log in</button>
			</div>
			{{#if message}}
				<p>{{message}}</p>
			{{/if}}
		</form>

	</div>
</html>